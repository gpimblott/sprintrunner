<div class="row">
    <div class="panel panel-info kanban-card">
        <div class="panel-heading">
            <h3 class="panel-title">
                <a data-toggle="collapse" href="#collapse_{{this.id}}">
                    <span class="glyphicon glyphicon-download"></span>
                </a>
                <b><a href="/story/{{this.id}}">{{this.title}} </a>&nbsp;</b>
            </h3>
        </div>
        <div id="collapse_{{this.id}}" class="panel-collapse collapse">
            <div class="panel-body">
                <b>As a</b> {{this.persona}}<br>
                <b>I want</b> {{{nl2br this.description}}}<br>
                <b>So that I can</b> {{{nl2br this.reason}}}
                <hr>
                <b>Acceptance Criteria</b><br>
                {{{nl2br this.acceptance_criteria}}}
            </div>
        </div>

        <div class="panel-footer">
            {{#each this.labels}}
                <a href="/labels/{{encode this.name}}">{{this.name}}</a>
                {{#unless @last}},{{/unless}}
            {{/each}}
            {{#if this.estimate}}
                <p>{{this.estimate}} points ({{this.team_name}})</p>
            {{else}}
                <p>Not estimated ({{this.team_name}})</p>
            {{/if}}
        </div>
    </div>
</div>