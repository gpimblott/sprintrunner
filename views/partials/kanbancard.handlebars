<div class="row">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">
                <a href="/story/{{this.id}}">{{this.title}} </a>&nbsp;
                <small>
                    <a data-toggle="collapse" href="#collapse_{{this.id}}">[details]</a>
                </small>
            </h3>
        </div>
        <div id="collapse_{{this.id}}" class="panel-collapse collapse">
            <div class="panel-body">{{{nl2br this.description}}}</div>
        </div>

        <div class="panel-footer">
            {{#each this.labels}}
                <a href="/labels/{{encode this.name}}">{{this.name}}</a>
                {{#unless @last}},{{/unless}}
            {{/each}}
            {{#if this.estimate}}
                <p>{{this.estimate}} points ({{this.team_name}})</p>
            {{else}}
                 <p>Not estimated ({{this.team_name}})</p>
            {{/if}}
        </div>
    </div>
</div>