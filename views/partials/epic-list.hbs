
<table id="epicTable" class="table table-striped" cellspacing="0" width="100%"></table>

<script>

    function populateEpics () {
        var table = $('#epicTable').DataTable({
            scrollY: 500,
            paging: false,
            ajax: {
                "url": "/api/epics",
                "type": "GET",
                "dataSrc": ""
            },
            columns: [ {
                data: 'theorder',
                title: 'Order'
            }, {
                data: 'title',
                title: 'Title'
            }, {
                data: 'description',
                title: 'Description'
            } ]
        });

        $('#epicTable tbody').on( 'click', 'tr', function () {
            if ( $(this).hasClass('selected') ) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        } );

    }
</script>