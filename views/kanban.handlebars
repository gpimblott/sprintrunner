<div class="row">
    <div class="col-md-12 text-center">
        <h3>Kanban - {{title}}</h3>
    </div>
</div>
<!-- Page Features -->
<div class="row">
    <div class="col-md-12">
        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Not Started</b> <br>
                            <small>Stories:{{notStarted.length}}  Points:{{calculatePoints notStarted}}</small>
                        </h4>
                    </div>
                </div>

                {{#each notStarted}}
                    {{> kanbancard }}
                {{/each}}
            </div>
        </div>

        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Started</b> <br>
                            <small>Stories:{{started.length}}  Points:{{calculatePoints started}}</small>
                        </h4>
                    </div>
                </div>

                {{#each started}}
                    {{> kanbancard }}
                {{/each}}
            </div>
        </div>

        <div class="col-md-4" style="border: #cdcdcd medium dashed">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h4 class="caption text-center">
                            <b>Finished</b> <br>
                            <small>Stories:{{finished.length}}  Points:{{calculatePoints finished}}</small>
                        </h4>
                    </div>
                </div>

                {{#each finished}}
                    {{> kanbancard }}
                {{/each}}
            </div>
        </div>
    </div>
</div>






